<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout">

        <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:text="Welcome to LocaBus!"
                    android:textSize="18sp"
                    android:gravity="center"
                    style="@style/TextViewHeader"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:text="Unlocks existing offers and special deals"
                    android:textSize="16sp"
                    android:gravity="center"
                    style="@style/TextViewHeader"
                    android:textColor="@color/darkgrey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout

                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/signup_google"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:outlineAmbientShadowColor="@color/colorPrimary"
                            app:cardCornerRadius="4dp"
                            app:cardUseCompatPadding="true"
                            app:elevation="0dp">
                        <LinearLayout
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_margin="5dp"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/google"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:text="Signup With Google"
                                    android:gravity="center"
                                    android:layout_margin="5dp"
                                    android:textSize="12sp"
                                    android:textColor="@color/darkgrey"
                                    style="@style/TextViewStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/signup_facebook"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:outlineAmbientShadowColor="@color/colorPrimary"
                            app:cardBackgroundColor="@color/faceBookBlue"
                            app:cardCornerRadius="4dp"
                            app:cardUseCompatPadding="true"
                            app:elevation="0dp">
                        <LinearLayout
                                android:padding="5dp"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <ImageView
                                    android:layout_margin="5dp"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    app:srcCompat="@drawable/facebook"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                    android:text="Signup With Facebook"
                                    android:gravity="center"
                                    android:layout_margin="5dp"
                                    style="@style/TextViewStyle"
                                    android:textColor="@color/white"
                                    android:textSize="12sp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View
                        android:layout_margin="10dp"
                        android:background="@color/grey"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:text="OR"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ring_border_black"
                        android:padding="5dp"
                        android:textSize="12sp"
                        style="@style/TextViewStyle"
                        android:textColor="@color/darkgrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_email_phone"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:background="@drawable/border_black"
                    android:padding="6dp"
                    style="@style/EditTextStyle"
                    android:layout_margin="10dp"
                    android:hint="Enter Email Id / Phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/send"
                    android:background="@drawable/rounded_blue"
                    android:padding="8dp"
                    android:layout_margin="10dp"
                    android:textColor="@color/white"
                    style="@style/TextViewStyle"
                    android:text="Continue"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/as_guest"
                    android:textColor="@color/colorAccent"
                    android:text="Continue as a Guest"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    style="@style/TextViewStyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textColor="@color/darkgrey"
                android:text="@string/say_siginup_with_google_to_sigin_up_with_google_or_just_type_your_mobile_number_email_id_to_signup"
                android:gravity="center"
                android:textSize="14sp"
                style="@style/TextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </LinearLayout>

    <ImageView
            android:layout_width="252dp"
            android:layout_height="157dp"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/group4117"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/progress_layout"
            android:visibility="gone"
            android:background="@color/transparentwhite"
            android:layout_height="match_parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">

        <ProgressBar

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>