<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.SeatBookingActivity" android:minHeight="47dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout2" app:layout_constraintHorizontal_bias="0.6">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_back_arrow"
                android:id="@+id/booking_ticket_back_arrow"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline7"/>
        <TextView
                android:text="Hans Travels &amp; Co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                style="@style/TextViewHeader"
                android:textSize="22sp"
                app:layout_constraintTop_toTopOf="@+id/guideline7"
                app:layout_constraintStart_toEndOf="@+id/booking_ticket_back_arrow"
                android:layout_marginStart="24dp"
                android:textColor="@color/button_text_color"/>
        <TextView
                android:text="A/C Sleeper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                style="@style/TextViewStyle"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                android:textColor="@color/gray_btn_bg_pressed_color"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:layout_constraintGuide_begin="23dp"
                android:id="@+id/guideline7"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_info"
                android:id="@+id/imageView13" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline7"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#F3F4F8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" android:id="@+id/constraintLayout5">

        <TextView
                android:text="Pune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                style="@style/TextViewHeader"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewHeader"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textView14"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView13"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Mumabi,"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextViewHeader"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/textView15" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/textView14"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Oct 12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                style="@style/TextViewStyle"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toEndOf="@+id/textView15"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="Modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                style="@style/TextViewStyle"
                android:id="@+id/textView18" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_seater_inactive"
            android:id="@+id/imageView14"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            app:layout_constraintStart_toEndOf="@+id/imageView14"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            style="@style/TextViewStyle"
            app:layout_constraintTop_toTopOf="@+id/imageView14"
            app:layout_constraintBottom_toBottomOf="@+id/imageView14"/>
    <TextView
            android:text="Your Seat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            style="@style/TextViewHeader"
            app:layout_constraintTop_toTopOf="@+id/textView19"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"/>


    <com.google.android.material.tabs.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabTextColor="@drawable/tab_text_color"
            style="@style/TextViewStyle"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextAppearance="@style/TabLayoutTextStyleChild"
            app:tabIndicator="@drawable/ic_minus_line"
            app:tabIndicatorFullWidth="false"
            android:id="@+id/tabLayout"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20">

        <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Upper Deck"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lower Deck"/>

    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager.widget.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/pager" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_card" app:layout_constraintStart_toStartOf="@+id/tabLayout"
            app:layout_constraintEnd_toEndOf="@+id/tabLayout"/>
    <TextView
            android:text="Available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewStyle"
            android:id="@+id/textView22" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView17" android:layout_marginTop="6dp"
    />
    <TextView
            android:text="Booked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewStyle"
            android:id="@+id/textView23" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView20" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewStyle"
            android:id="@+id/textView24" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView22" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            style="@style/TextViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView23"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@drawable/border_black"
            android:id="@+id/imageView17"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tabLayout"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@drawable/rounded_blue"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:id="@+id/imageView23"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@drawable/border_grey"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:id="@+id/imageView20"/>
    <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp" app:srcCompat="@drawable/border_pink"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView23" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:id="@+id/imageView22"/>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/bottom_card">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/constraintLayout6" app:layout_constraintBottom_toBottomOf="@+id/textView21"
                app:layout_constraintTop_toBottomOf="@+id/textView21">

            <TextView
                    android:text="Total Fare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21"
                    android:textSize="12sp"
                    style="@style/TextViewStyle"
                    android:textColor="@color/gray_btn_bg_pressed_color"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="Seat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView26" android:textSize="12sp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="24dp" app:layout_constraintEnd_toStartOf="@+id/book_now"
                    android:textColor="@color/gray_btn_bg_pressed_color"/>
            <TextView
                    android:text="Next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/book_now"
                    android:background="@drawable/rounded_blue"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textSize="12sp"
                    style="@style/TextViewStyle"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
            <TextView
                    android:text="SL 12, SL 13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28"
                    style="@style/TextViewHeader"
                    app:layout_constraintTop_toBottomOf="@+id/textView26"
                    app:layout_constraintEnd_toEndOf="@+id/textView26" android:textSize="14sp"
                    android:textColor="@color/darkgrey"
                    app:layout_constraintStart_toEndOf="@+id/txt_selected_seat_price" android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"/>
            <ImageView
                    android:layout_width="7dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_rupee_symbol"
                    android:id="@+id/imageView24"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView21"/>
            <TextView
                    android:text="1220"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_selected_seat_price"
                    android:textColor="@color/colorAccent" android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/imageView24"
                    app:layout_constraintTop_toBottomOf="@+id/textView21"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>