<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/brandon_reg</item>
    </style>

    <style name="TabLayoutTextStyle" >
        <item name="android:fontFamily">@font/brandon_reg</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayoutTextStyleHeader" >
        <item name="android:fontFamily">@font/brandon_med</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextViewHeader" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/brandon_med</item>

    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/textColor_black</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/brandon_reg</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PinWidget" />

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/brandon_reg</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/brandon_reg</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
